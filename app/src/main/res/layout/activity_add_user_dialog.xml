<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Xaridor Ma'lumoti"
                android:textAlignment="center"
                android:textColor="@color/LogoTextColor"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forTeacherName"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Ism familiyasi"
                android:padding="5dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:startIconContentDescription="teacherName"
                app:startIconDrawable="@drawable/baseline_account_circle_24"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forTeacherOrganization"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Tashkiloti"
                android:padding="5dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:startIconContentDescription="teacherLocation"
                app:startIconDrawable="@drawable/baseline_assured_workload_24"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teacherOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forTeacherRoomKey"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Xona kaliti"
                android:padding="5dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:startIconContentDescription="teacherLocation"
                app:startIconDrawable="@drawable/baseline_key_24"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teacherRoomKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forTeacherPhoneNumber"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Telefon raqami"
                android:padding="5dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:prefixText="+998 "
                app:prefixTextColor="@color/LogoTextColor"
                app:startIconContentDescription="teacherLocation"
                app:startIconDrawable="@drawable/baseline_phone_iphone_24"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teacherPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/LogoTextColor"
            android:id="@+id/confirmTeacherDetail"
            android:clickable="true"
            android:checkable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@color/LogoTextColor"
                android:backgroundTint="@color/RankColor"
                android:padding="10dp"
                android:text="Tasdiqlash"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>

