<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/userListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/LogoTextColor"
        android:background="@drawable/just_border"
        android:layout_weight="2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Jhon Doe"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/userListPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/LogoTextColor"
        android:background="@drawable/just_border"
        android:layout_weight="3"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="F4"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="3"
        android:weightSum="3"
        android:background="@drawable/just_border"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userListUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:checkable="true"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:background="@color/white"
                android:src="@drawable/square_edit_outline"
                android:layout_height="24dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userListDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:background="@color/white"
                android:layout_height="24dp"
                android:src="@drawable/trash_can_outline"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>