<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foydalanuvchi ma'lumotlarini tahrirlash"
        android:textAlignment="center"

        android:textSize="18sp"
        android:textColor="@color/LogoTextColor"
        android:layout_margin="10dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userListNameUpdateInputLayout"
        android:padding="5dp"
        android:hint="F.I.SH"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:startIconTint="@color/LogoTextColor"
        app:startIconDrawable="@drawable/baseline_account_circle_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/userListNameUpdateInput"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="50"
            android:inputType="text"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userListUserOrganizationUpdateInputLayout"
        android:padding="5dp"
        android:hint="Foydalanuvchi Nomi"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:startIconTint="@color/LogoTextColor"
        app:startIconDrawable="@drawable/baseline_assured_workload_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/userListUserOrganizationUpdateInput"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="15"
            android:inputType="text"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userListUserRoomKeyUpdateInputLayout"
        android:padding="5dp"
        android:hint="Paroli"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:startIconTint="@color/LogoTextColor"
        app:startIconDrawable="@drawable/baseline_key_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/userListUserRoomKeyUpdateInput"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="15"
            android:inputType="text"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userListPhoneUpdateInputLayout"
        android:padding="5dp"
        android:hint="Telefon Raqami"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:startIconTint="@color/LogoTextColor"
        app:startIconDrawable="@drawable/baseline_phone_iphone_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/userListPhoneUpdateInput"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="13"
            android:inputType="phone"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userListAddressUpdateCompleteCard"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:checkable="true"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/CardBorderColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/CardBorderColor">
            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:padding="5sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:text="Tasdiqlash"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>